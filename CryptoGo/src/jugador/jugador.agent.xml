<agent 
	xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="jugador"
	package="src.jugador">

	<imports>
		<import>jadex.runtime.*</import>
		<import>jadex.planlib.*</import>
		<import>jadex.util.*</import>
		<import>jadex.adapter.fipa.*</import>
		<import>java.util.logging.*</import>
		<import>java.util.*</import>
		<import>human.plans.*</import>
	</imports>

	<capabilities>
		<capability name="dfcap" file="jadex.planlib.DF"/>
	</capabilities>
	<goals>
			<achievegoalref name="df_register">
			<concrete ref="dfcap.df_register"/>
		</achievegoalref>

		<achievegoalref name="df_search">
			<concrete ref="dfcap.df_search"/>
		</achievegoalref>
		<performgoal name="get_beer" recur="true" recurdelay="3000" >  
			<contextcondition>
				 ($beliefbase.havebeer) &amp;&amp; 
				 (($beliefbase.newbeertime + $beliefbase.drinkingtime ) &lt; ($beliefbase.currenttime ))   
			</contextcondition>
		</performgoal> 
	</goals>
	
	<plans>
		<plan name="Unirse_a_la_partida">
                <body class="UnirsePartida" />
			<trigger> <goal ref="df_search"/> </trigger>
		</plan>
	</plans>
	
</agent>

