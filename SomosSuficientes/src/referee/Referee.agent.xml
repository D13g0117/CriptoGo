<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="Referee"
	package="src.referee">

	<imports>
		<import>referee.beliefs.*</import>
		<import>referee.plans.*</import>
		<import>jadex.runtime.*</import>
		<import>jadex.planlib.*</import>
		<import>jadex.util.*</import>
		<import>jadex.adapter.fipa.*</import>
		<import>java.util.logging.*</import>
		<import>java.util.*</import>
	</imports>
	
	<capabilities>
		<capability name="dfcap" file="jadex.planlib.DF"/>
	</capabilities>

	<beliefs>
		<belief name="casa" class="int"/>
		<belief name="visitante" class="int"/>
	</beliefs>

	<goals>
		<achievegoalref name="df_search">
			<concrete ref="dfcap.df_search"/>
		</achievegoalref>
		<performgoal name="completar_casa" recur="true" recurdelay="2000">
			<contextcondition>$beliefbase.casa &lt; 11</contextcondition>
		</performgoal>
		<performgoal name="completar_visitante" recur="true" recurdelay="2000">
			<contextcondition>$beliefbase.visitante &lt; 11</contextcondition>
		</performgoal>
		<achievegoal name="comienza_partido">
			<creationcondition>
				($beliefbase.casa &gt; 10) &amp;&amp; ($beliefbase.visitante &gt; 10)
			</creationcondition> 
		</achievegoal>
	</goals>
		
	<plans>
		<plan name="completar_casa_plan">
			<body class="CompletarCasaPlan" />
			<trigger> <goal ref="completar_casa"/> </trigger>
		</plan>
		<plan name="completar_visitante_plan">
			<body class="CompletarVisitantePlan" />
			<trigger> <goal ref="completar_visitante"/></trigger>
		</plan>
		<plan name="comienza_partido_plan">
			<body class="ComienzaPartidoPlan" />
			<trigger><goal ref="comienza_partido"/></trigger>
		</plan>
	</plans>
		
	<configurations>
		<configuration name="default">
		<beliefs>
			<initialbelief ref="casa">
				<fact>0</fact>
			</initialbelief>
			<initialbelief ref="visitante">
				<fact>0</fact>
			</initialbelief>
		</beliefs>
		<goals>
			<initialgoal ref="completar_casa"></initialgoal>
			<initialgoal ref="completar_visitante"></initialgoal>
		</goals>

		</configuration>
	</configurations>
	
</agent>

